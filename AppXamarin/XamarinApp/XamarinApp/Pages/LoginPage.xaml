<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp.Pages.LoginPage"
             Title="Hhellow">
  
  <StackLayout Padding="30" BackgroundColor="#222">
    <Label>Pepillo grillo</Label>
    <Image Source="http://www.medexp.com.mx/Static/Imgs/logo.png" 
           HorizontalOptions="Center" HeightRequest="180"  />
    <Label Text="Username" TextColor="White" />
    <Entry x:Name="Username" />
    <Label Text="Password" TextColor="White" />
    <Entry x:Name="Password" IsPassword="True" />
    <Button Text="Sign In" HorizontalOptions="Center" />
  </StackLayout>
  
</ContentPage>