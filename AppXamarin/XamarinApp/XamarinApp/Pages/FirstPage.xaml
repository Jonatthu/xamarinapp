<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp.Pages.FirstPage"
             Title ="Página principal">
  
  <ScrollView>
    <StackLayout BackgroundColor="#222" Orientation="Vertical" Padding="100">
        <Button Text="Información de la cuenta"
                HorizontalOptions="Center"
                BackgroundColor="#3399CC"
                WidthRequest="350"
                Clicked="InformationClicked"/>

        <Button Text="Programar cita"
                HorizontalOptions="Center"
                BackgroundColor="#3399CC"
                WidthRequest="350"
                Clicked="ScheduleAppointmentClicked"/>

        <Button Text="Citas programadas"
                HorizontalOptions="Center"
                BackgroundColor="#3399CC"
                Clicked="AppoinmentClicked"
                WidthRequest="350"/>

        <Button Text="Revisar medicamentos"
                HorizontalOptions="Center"
                BackgroundColor="#3399CC"
                WidthRequest="350"/>
      </StackLayout>
  </ScrollView>
 
  
  
</ContentPage>