<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              x:Class="XamarinApp.Pages.MainPage"
              Title="Appoinment List" BackgroundColor="#fafafa">

  <ContentPage.Content>
    <ListView  x:Name="CitasListView">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <ViewCell.ContextActions>
              <MenuItem Text="Delete"
                          Clicked="Delete_OnClicked" IsDestructive="True"
                          CommandParameter="{Binding AppoimentTitle}" />
            </ViewCell.ContextActions>
            <StackLayout Orientation="Vertical" Spacing="50">
              <StackLayout Orientation="Horizontal" Padding="20,0" >
                <Image Source="{Binding Image}" HeightRequest="40"/>
                <Label Text="{Binding AppoimentTitle}" TextColor="#f35e20"/>
                <Label Text="{Binding DoctorName}" HorizontalOptions="EndAndExpand" TextColor="#503026" />
              </StackLayout>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </ContentPage.Content>

</ContentPage>